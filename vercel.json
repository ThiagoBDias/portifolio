{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/blog/([^/]+)",
      "dest": "/blog/$1.html"
    },
    {
      "src": "/(blog|sobre|contato)",
      "dest": "/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "trailingSlash": false
}
