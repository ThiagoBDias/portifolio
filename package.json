{
  "name": "site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "node scripts/check-env.js && astro build",
    "build:windows": "build.bat",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && echo 'Build concluído! Faça upload da pasta dist/ para seu serviço de hospedagem'",
    "deploy:vercel": "npm run build && vercel --prod",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "prebuild": "echo 'Iniciando build do projeto...'",
    "postbuild": "echo 'Build concluído com sucesso!'",
    "check-secrets": "node scripts/check-secrets.js",
    "test:build": "test-build-deploy.bat",
    "test:deploy": "simulate-deploy.bat",
    "test:vercel": "simulate-vercel-deploy.bat",
    "diagnose": "node scripts/diagnose-build-deploy.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.13.5",
    "marked": "^16.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "dotenv": "^17.2.2",
    "jsdom": "^26.1.0",
    "vitest": "^3.2.4"
  }
}
