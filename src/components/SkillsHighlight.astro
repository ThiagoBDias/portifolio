---
// Componente para exibir habilidades destacadas com animação e estilo moderno
const frontendSkills = ['React', 'TypeScript', 'Tailwind CSS', 'Vue.js', 'Astro'];
const backendSkills = ['Node.js', 'Python', 'PostgreSQL', 'MongoDB', 'Supabase'];
const devOpsSkills = ['Docker', 'GitHub Actions', 'AWS', 'CI/CD', 'Vercel'];
---

<div class="py-12 bg-gray-900/30 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold text-white mb-4">Tecnologias em Destaque</h2>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Essas são as principais tecnologias que utilizo nos meus projetos. Estou sempre aprendendo e expandindo meu conhecimento.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
      <!-- Frontend Skills -->
      <div class="group hover:scale-105 transition-all duration-300">
        <div class="bg-gradient-to-br from-primary-900/20 to-primary-800/20 p-6 rounded-xl border border-primary-700/30 hover:border-primary-500/50 transition-all h-full">
          <div class="w-12 h-12 bg-gradient-to-r from-primary-500 to-primary-400 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">Frontend</h3>
          
          <div class="space-y-3">
            {frontendSkills.map((skill) => (
              <div class="flex items-center">
                <div class="w-full bg-gray-700/50 rounded-full h-2">
                  <div class="bg-gradient-to-r from-primary-500 to-primary-400 h-2 rounded-full skill-bar"></div>
                </div>
                <span class="ml-3 text-sm text-gray-300 min-w-[80px]">{skill}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Backend Skills -->
      <div class="group hover:scale-105 transition-all duration-300">
        <div class="bg-gradient-to-br from-accent-cyan/20 to-accent-blue/20 p-6 rounded-xl border border-accent-cyan/30 hover:border-accent-cyan/50 transition-all h-full">
          <div class="w-12 h-12 bg-gradient-to-r from-accent-cyan to-accent-blue rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">Backend</h3>
          
          <div class="space-y-3">
            {backendSkills.map((skill) => (
              <div class="flex items-center">
                <div class="w-full bg-gray-700/50 rounded-full h-2">
                  <div class="bg-gradient-to-r from-accent-cyan to-accent-blue h-2 rounded-full skill-bar"></div>
                </div>
                <span class="ml-3 text-sm text-gray-300 min-w-[80px]">{skill}</span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- DevOps Skills -->
      <div class="group hover:scale-105 transition-all duration-300">
        <div class="bg-gradient-to-br from-accent-indigo/20 to-accent-blue/20 p-6 rounded-xl border border-accent-indigo/30 hover:border-accent-indigo/50 transition-all h-full">
          <div class="w-12 h-12 bg-gradient-to-r from-accent-indigo to-accent-blue rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">DevOps</h3>
          
          <div class="space-y-3">
            {devOpsSkills.map((skill) => (
              <div class="flex items-center">
                <div class="w-full bg-gray-700/50 rounded-full h-2">
                  <div class="bg-gradient-to-r from-accent-indigo to-accent-blue h-2 rounded-full skill-bar"></div>
                </div>
                <span class="ml-3 text-sm text-gray-300 min-w-[80px]">{skill}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .skill-bar {
    animation: skill-fill 1.5s ease-in-out forwards;
    width: 0;
  }
  
  @keyframes skill-fill {
    0% { width: 0; }
    100% { width: 90%; }
  }
  
  .group:hover .skill-bar {
    animation: skill-pulse 1.5s ease-in-out infinite;
  }
  
  @keyframes skill-pulse {
    0% { opacity: 1; }
    50% { opacity: 0.7; }
    100% { opacity: 1; }
  }
</style>
