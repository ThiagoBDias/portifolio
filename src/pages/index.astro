---
import Layout from '../layouts/Layout.astro';
import { getAllPublishedPosts, getFeaturedProjects } from '../lib/supabase.js';

// Fetch latest posts and projects for homepage
const posts = await getAllPublishedPosts();
const latestPosts = posts.slice(0, 3); // Show only 3 most recent posts

const featuredProjects = await getFeaturedProjects(3); // Get 3 featured projects

// Dados da formação (você pode substituir por dados reais ou buscar de uma API/DB)
const formacao = [
  {
    titulo: "Ciência da Computação",
    instituicao: "Universidade Federal de Alagoas",
    periodo: "2020 - 2024",
    descricao: "Bacharelado em Ciência da Computação com foco em desenvolvimento web e sistemas distribuídos."
  },
  {
    titulo: "Tecnólogo em Análise e Desenvolvimento de Sistemas",
    instituicao: "Instituto Federal de Alagoas",
    periodo: "2017 - 2019",
    descricao: "Formação técnica com ênfase em desenvolvimento de software e banco de dados."
  }
];

// Dados das certificações (você pode substituir por dados reais)
const certificacoes = [
  {
    nome: "AWS Certified Cloud Practitioner",
    emissor: "Amazon Web Services",
    ano: "2023",
    descricao: "Fundamentos em serviços de nuvem da AWS, incluindo arquitetura, segurança e modelos de preços."
  },
  {
    nome: "Meta Front-End Developer Professional Certificate",
    emissor: "Coursera",
    ano: "2022",
    descricao: "Desenvolvimento front-end avançado utilizando React, HTML, CSS e JavaScript."
  },
  {
    nome: "Docker Certified Associate",
    emissor: "Docker Inc.",
    ano: "2022",
    descricao: "Conhecimentos em conteinerização, orquestração e implantação de aplicações com Docker."
  },
  {
    nome: "JavaScript Algorithms and Data Structures",
    emissor: "freeCodeCamp",
    ano: "2021",
    descricao: "Implementação de estruturas de dados e algoritmos eficientes em JavaScript."
  }
];
---

<Layout title="Thiago Dias - Desenvolvedor Full Stack">
	<!-- Hero Section -->
	<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950 overflow-hidden">
		<!-- Background Pattern -->
		<div class="absolute inset-0 opacity-10">
			<div class="absolute top-20 left-20 w-72 h-72 bg-primary-500 rounded-full mix-blend-multiply filter blur-xl animate-bounce-subtle"></div>
			<div class="absolute top-40 right-20 w-72 h-72 bg-accent-orange rounded-full mix-blend-multiply filter blur-xl animate-bounce-subtle" style="animation-delay: 1s;"></div>
			<div class="absolute bottom-20 left-1/3 w-72 h-72 bg-accent-gold rounded-full mix-blend-multiply filter blur-xl animate-bounce-subtle" style="animation-delay: 2s;"></div>
		</div>

		<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<div class="animate-fade-in">
				<h1 class="text-5xl md:text-7xl font-bold mb-6">
					Olá, eu sou <span class="bg-gradient-to-r from-primary-400 via-accent-orange to-accent-gold bg-clip-text text-transparent">Thiago Dias</span>
				</h1>
				<h2 class="text-xl md:text-2xl text-gray-300 mb-8 font-light">
					Desenvolvedor Full Stack
				</h2>
				<p class="text-lg md:text-xl text-gray-400 mb-12 max-w-3xl mx-auto leading-relaxed">
					Criando experiências digitais excepcionais com tecnologias modernas e melhores práticas de desenvolvimento.
					Especializado em React, Node.js e soluções escaláveis.
				</p>

				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
					<a href="/projetos" class="bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-500 hover:to-secondary-500 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-xl shadow-primary-500/25">
						Ver Projetos
					</a>
					<a href="/contato" class="border-2 border-gray-600 hover:border-primary-400 text-gray-300 hover:text-primary-400 px-8 py-4 rounded-lg font-semibold transition-all duration-300">
						Entrar em Contato
					</a>
				</div>
			</div>
		</div>

		<!-- Scroll Indicator -->
		<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
			<svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
			</svg>
		</div>
	</section>

	<!-- Featured Projects Section -->
	{featuredProjects.length > 0 && (
		<section class="py-20 bg-gray-900/50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-3xl md:text-4xl font-bold mb-4 bg-gradient-to-r from-primary-400 to-accent-orange bg-clip-text text-transparent">
						Projetos em Destaque
					</h2>
					<p class="text-gray-400 text-lg max-w-2xl mx-auto">
						Alguns dos meus trabalhos mais recentes e desafiadores
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{featuredProjects.map((project) => (
						<article class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-primary-500/50 transition-all duration-300 group hover:transform hover:scale-105">
							{project.image && (
								<div class="mb-4 overflow-hidden rounded-lg">
									<img src={project.image} alt={project.title} class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" loading="lazy" />
								</div>
							)}
							<div class="space-y-4">
								<h3 class="text-xl font-semibold text-white group-hover:text-primary-400 transition-colors duration-200">
									{project.title}
								</h3>
								<p class="text-gray-400 line-clamp-3">
									{project.description}
								</p>
								{project.technologies && project.technologies.length > 0 && (
									<div class="flex flex-wrap gap-2">
										{project.technologies.slice(0, 3).map((tech: string) => (
											<span class="px-3 py-1 bg-gray-700/50 text-gray-300 text-sm rounded-full border border-gray-600/50">
												{tech}
											</span>
										))}
									</div>
								)}
								<div class="flex gap-3 pt-4">
									{project.demoLink && (
										<a href={project.demoLink} class="flex-1 bg-primary-600 hover:bg-primary-500 text-white text-center py-2 px-4 rounded-lg transition-colors duration-200 font-medium" target="_blank" rel="noopener noreferrer">
											Demo
										</a>
									)}
									{project.githubLink && (
										<a href={project.githubLink} class="flex-1 border border-gray-600 hover:border-primary-400 text-gray-300 hover:text-primary-400 text-center py-2 px-4 rounded-lg transition-colors duration-200 font-medium" target="_blank" rel="noopener noreferrer">
											GitHub
										</a>
									)}
								</div>
							</div>
						</article>
					))}
				</div>

				<div class="text-center mt-12">
					<a href="/projetos" class="inline-flex items-center gap-2 bg-gray-800/50 hover:bg-gray-700/50 text-gray-300 hover:text-primary-400 px-6 py-3 rounded-lg transition-all duration-200 border border-gray-700/50 hover:border-primary-500/50">
						Ver Todos os Projetos
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
						</svg>
					</a>
				</div>
			</div>
		</section>
	)}

	<!-- Skills Section -->
	<section class="py-20 bg-gray-950">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-bold mb-4 bg-gradient-to-r from-primary-400 to-accent-orange bg-clip-text text-transparent">
					Tecnologias que Uso
				</h2>
				<p class="text-gray-400 text-lg max-w-2xl mx-auto">
					Minha stack técnica atual e ferramentas que domino
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<div class="bg-gradient-to-br from-primary-900/20 to-primary-800/20 p-8 rounded-xl border border-primary-700/30 hover:border-primary-500/50 transition-all duration-300">
					<div class="w-12 h-12 bg-gradient-to-r from-primary-500 to-primary-400 rounded-lg flex items-center justify-center mb-4">
						<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-white mb-3">Frontend</h3>
					<p class="text-gray-400 mb-4">React, Vue.js, Astro, TypeScript, HTML5, CSS3, Tailwind CSS</p>
					<div class="flex flex-wrap gap-2">
						<span class="px-2 py-1 bg-primary-500/20 text-primary-300 text-xs rounded">React</span>
						<span class="px-2 py-1 bg-primary-500/20 text-primary-300 text-xs rounded">TypeScript</span>
						<span class="px-2 py-1 bg-primary-500/20 text-primary-300 text-xs rounded">Tailwind</span>
					</div>
				</div>

				<div class="bg-gradient-to-br from-secondary-900/20 to-secondary-800/20 p-8 rounded-xl border border-secondary-700/30 hover:border-secondary-500/50 transition-all duration-300">
					<div class="w-12 h-12 bg-gradient-to-r from-secondary-500 to-secondary-400 rounded-lg flex items-center justify-center mb-4">
						<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-white mb-3">Backend</h3>
					<p class="text-gray-400 mb-4">Node.js, Python, Supabase, PostgreSQL, MongoDB, FastAPI</p>
					<div class="flex flex-wrap gap-2">
						<span class="px-2 py-1 bg-secondary-500/20 text-secondary-300 text-xs rounded">Node.js</span>
						<span class="px-2 py-1 bg-secondary-500/20 text-secondary-300 text-xs rounded">Python</span>
						<span class="px-2 py-1 bg-secondary-500/20 text-secondary-300 text-xs rounded">Supabase</span>
					</div>
				</div>

				<div class="bg-gradient-to-br from-accent-gold/20 to-accent-orange/20 p-8 rounded-xl border border-accent-gold/30 hover:border-accent-gold/50 transition-all duration-300">
					<div class="w-12 h-12 bg-gradient-to-r from-accent-gold to-accent-orange rounded-lg flex items-center justify-center mb-4">
						<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-white mb-3">DevOps</h3>
					<p class="text-gray-400 mb-4">Docker, GitHub Actions, Vercel, AWS, CI/CD, Cloud</p>
					<div class="flex flex-wrap gap-2">
						<span class="px-2 py-1 bg-accent-gold/20 text-accent-gold text-xs rounded">Docker</span>
						<span class="px-2 py-1 bg-accent-gold/20 text-accent-gold text-xs rounded">AWS</span>
						<span class="px-2 py-1 bg-accent-gold/20 text-accent-gold text-xs rounded">CI/CD</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Latest Posts Section -->
	{latestPosts.length > 0 && (
		<section class="py-20 bg-gray-900/50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-3xl md:text-4xl font-bold mb-4 bg-gradient-to-r from-primary-400 to-accent-orange bg-clip-text text-transparent">
						Últimas Publicações
					</h2>
					<p class="text-gray-400 text-lg max-w-2xl mx-auto">
						Compartilhando conhecimento e experiências sobre desenvolvimento
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{latestPosts.map((post) => (
						<article class="bg-gray-800/50 backdrop-blur-sm rounded-xl overflow-hidden border border-gray-700/50 hover:border-primary-500/50 transition-all duration-300 group">
							{post.coverImage && (
								<div class="overflow-hidden">
									<img src={post.coverImage} alt={post.title} class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" loading="lazy" />
								</div>
							)}
							<div class="p-6">
								<h3 class="text-xl font-semibold text-white mb-3 group-hover:text-primary-400 transition-colors duration-200 line-clamp-2">
									<a href={`/blog/${post.slug}`}>{post.title}</a>
								</h3>
								<p class="text-gray-400 mb-4 line-clamp-3">
									{post.excerpt}
								</p>
								<div class="flex items-center justify-between">
									<div class="flex flex-wrap gap-2">
										{post.tags && post.tags.length > 0 && post.tags.slice(0, 2).map((tag: string) => (
											<span class="px-2 py-1 bg-gray-700/50 text-gray-300 text-xs rounded-full">
												{tag}
											</span>
										))}
									</div>
									<a href={`/blog/${post.slug}`} class="text-primary-400 hover:text-primary-300 font-medium transition-colors duration-200">
										Ler mais →
									</a>
								</div>
							</div>
						</article>
					))}
				</div>

				<div class="text-center mt-12">
					<a href="/blog" class="inline-flex items-center gap-2 bg-gray-800/50 hover:bg-gray-700/50 text-gray-300 hover:text-primary-400 px-6 py-3 rounded-lg transition-all duration-200 border border-gray-700/50 hover:border-primary-500/50">
						Ver Todas as Publicações
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
						</svg>
					</a>
				</div>
			</div>
		</section>
	)}

	<!-- Formação Acadêmica e Profissional -->
	<section class="py-20 bg-gradient-to-br from-gray-900 via-gray-950 to-gray-900">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-bold mb-4 bg-gradient-to-r from-primary-400 to-accent-orange bg-clip-text text-transparent">
					Formação & Certificações
				</h2>
				<p class="text-gray-400 text-lg max-w-2xl mx-auto">
					Minha jornada educacional e certificações profissionais
				</p>
			</div>
			
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
				<!-- Formação Acadêmica -->
				<div class="bg-gray-800/30 backdrop-blur-sm rounded-xl p-8 border border-gray-700/50 hover:border-primary-500/30 transition-all duration-300">
					<h3 class="text-2xl font-semibold text-white mb-6 flex items-center">
						<svg class="w-6 h-6 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
						</svg>
						Formação Acadêmica
					</h3>
					
					<div class="space-y-8">
						{formacao.map((item, index) => (
							<div class={`relative pl-8 border-l-2 border-primary-500/30 ${index < formacao.length - 1 ? "pb-8" : ""}`}>
								<div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-primary-500"></div>
								<h4 class="text-xl font-medium text-primary-400">{item.titulo}</h4>
								<p class="text-gray-300 font-medium">{item.instituicao}</p>
								<p class="text-gray-400">{item.periodo}</p>
								<p class="mt-2 text-gray-400">{item.descricao}</p>
							</div>
						))}
					</div>
				</div>
				
				<!-- Certificações -->
				<div class="bg-gray-800/30 backdrop-blur-sm rounded-xl p-8 border border-gray-700/50 hover:border-accent-cyan/30 transition-all duration-300">
					<h3 class="text-2xl font-semibold text-white mb-6 flex items-center">
						<svg class="w-6 h-6 mr-2 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
						</svg>
						Certificações & Cursos
					</h3>
					
					<div class="space-y-6">
						{certificacoes.map((cert) => (
							<div class="group p-4 bg-gray-800/50 rounded-lg hover:bg-gray-700/50 transition-all duration-300">
								<h4 class="text-secondary-400 font-medium">{cert.nome}</h4>
								<p class="text-gray-300 text-sm">{cert.emissor} | {cert.ano}</p>
								<p class="mt-2 text-gray-400 text-sm">{cert.descricao}</p>
							</div>
						))}
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-20 bg-gradient-to-r from-primary-900/20 to-accent-blue/20">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h2 class="text-3xl md:text-4xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-accent-orange bg-clip-text text-transparent">
				Vamos Trabalhar Juntos?
			</h2>
			<p class="text-gray-400 text-lg mb-8 max-w-2xl mx-auto">
				Estou sempre interessado em novos projetos e oportunidades.
				Vamos conversar sobre como posso ajudar a transformar suas ideias em realidade.
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a href="/contato" class="bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-500 hover:to-secondary-500 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-xl shadow-primary-500/25">
					Entrar em Contato
				</a>
				<a href="/sobre" class="border-2 border-gray-600 hover:border-primary-400 text-gray-300 hover:text-primary-400 px-8 py-4 rounded-lg font-semibold transition-all duration-300">
					Sobre Mim
				</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	@keyframes bounce-subtle {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@keyframes fade-in {
		0% {
			opacity: 0;
			transform: translateY(20px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-bounce-subtle {
		animation: bounce-subtle 6s ease-in-out infinite;
	}

	.animate-fade-in {
		animation: fade-in 1s ease-out forwards;
	}

	.line-clamp-2 {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.line-clamp-3 {
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
</style>
