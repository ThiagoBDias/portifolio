---
import Layout from '../layouts/Layout.astro';
import RealtimeTechSection from '../components/RealtimeTechSection.astro';
import { getFeaturedProjects } from '../lib/supabase.js';

// Fetch featured projects for homepage
const featuredProjects = await getFeaturedProjects(3); // Get 3 featured projects

// Dados da formação (você pode substituir por dados reais ou buscar de uma API/DB)
const formacao = [
  {
    titulo: "Tecnólogo em Análise e Desenvolvimento de Sistemas",
    instituicao: "Instituto Federal do Triângulo Mineiro (IFTM)",
    periodo: "2020 - 2024",
    descricao: "Formação técnica superior com foco em desenvolvimento de software, análise de sistemas e banco de dados."
  },
  {
    titulo: "Ensino Médio",
    instituicao: "Nely Amaral",
    periodo: "2017 - 2019",
    descricao: "Formação básica com base sólida para continuidade dos estudos."
  }
];

// Dados das certificações reais
const certificacoes = [
  {
    nome: "Contribuindo em um Projeto Open Source no GitHub",
    emissor: "DIO - Digital Innovation One",
    ano: "2025",
    descricao: "Certificação em contribuições para projetos open source e boas práticas de colaboração no GitHub."
  },
  {
    nome: "Introdução a Versionamento com Git & GitHub",
    emissor: "DIO - Digital Innovation One",
    ano: "2025",
    descricao: "Fundamentos de controle de versão e comandos Git essenciais para desenvolvimento colaborativo."
  },
  {
    nome: "Desafios de Projetos: Crie Um Portfólio Vencedor",
    emissor: "DIO - Digital Innovation One",
    ano: "2025",
    descricao: "Desenvolvimento de portfólio profissional e técnicas de apresentação de projetos."
  },
  {
    nome: "Introdução à Análise de Dados com a Randstad",
    emissor: "DIO - Digital Innovation One",
    ano: "2025",
    descricao: "Fundamentos de análise de dados e ferramentas analíticas para cenários empresariais."
  },
  {
    nome: "Conhecer criar com o Power BI",
    emissor: "Microsoft Azure",
    ano: "2025",
    descricao: "Desenvolvimento de dashboards e relatórios interativos com Power BI para análise de dados."
  },
  {
    nome: "Introdução aos conceitos de IA generativa",
    emissor: "Microsoft Azure",
    ano: "2025",
    descricao: "Conceitos fundamentais de inteligência artificial generativa e suas aplicações no Azure."
  },
  {
    nome: "Descrever as ferramentas de monitoramento no Azure",
    emissor: "Microsoft Azure",
    ano: "2025",
    descricao: "Ferramentas de monitoramento e observabilidade no Microsoft Azure para infraestrutura em nuvem."
  },
  {
    nome: "Introdução ao GitHub Copilot",
    emissor: "Microsoft Azure",
    ano: "2025",
    descricao: "IA para desenvolvimento, assistente de código inteligente e produtividade em programação."
  }
];
---

<Layout title="Thiago Dias - Desenvolvedor Full Stack">
	<!-- Hero Section -->
	<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950 overflow-hidden">
		<!-- Background Pattern -->
		<div class="absolute inset-0 opacity-10">
			<div class="absolute top-20 left-20 w-72 h-72 bg-primary-500 rounded-full mix-blend-multiply filter blur-xl animate-bounce-subtle"></div>
			<div class="absolute top-40 right-20 w-72 h-72 bg-accent-orange rounded-full mix-blend-multiply filter blur-xl animate-bounce-subtle" style="animation-delay: 1s;"></div>
			<div class="absolute bottom-20 left-1/3 w-72 h-72 bg-accent-gold rounded-full mix-blend-multiply filter blur-xl animate-bounce-subtle" style="animation-delay: 2s;"></div>
		</div>

		<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<div class="animate-fade-in">
				<h1 class="text-5xl md:text-7xl font-bold mb-6">
					Olá, eu sou <span class="bg-gradient-to-r from-primary-400 via-accent-orange to-accent-gold bg-clip-text text-transparent">Thiago Dias</span>
				</h1>
				<h2 class="text-xl md:text-2xl text-gray-300 mb-8 font-light">
					Desenvolvedor Full Stack e Analista de Sistemas
				</h2>
				<p class="text-lg md:text-xl text-gray-400 mb-12 max-w-4xl mx-auto leading-relaxed">
					Tecnólogo em Análise e Desenvolvimento de Sistemas formado pelo IFTM, atualmente Assistente de TI no Grupo Lidon.
					Com mais de 5 anos de experiência na área de tecnologia, unindo desenvolvimento de aplicações web com expertise em sistemas ERP Sankhya, 
					suporte técnico e análise de negócios.
				</p>
				<p class="text-base md:text-lg text-gray-500 mb-12 max-w-4xl mx-auto leading-relaxed">
					Especializado em JavaScript, React, Node.js, Microsoft Azure, Git/GitHub e Power BI. 
					Possui 17 certificações obtidas em 2025, incluindo Microsoft Azure, DIO e IA Generativa. 
					Sou movido por desafios e pelo aprendizado contínuo, buscando sempre entregar soluções que facilitem o dia a dia das empresas e gerem resultados reais.
				</p>

				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
					<a href="/projetos" class="bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-500 hover:to-secondary-500 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-xl shadow-primary-500/25">
						Ver Projetos
					</a>
					<a href="/contato" class="border-2 border-gray-600 hover:border-primary-400 text-gray-300 hover:text-primary-400 px-8 py-4 rounded-lg font-semibold transition-all duration-300">
						Entrar em Contato
					</a>
				</div>
			</div>
		</div>

		<!-- Scroll Indicator -->
		<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
			<svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
			</svg>
		</div>
	</section>

	<!-- Featured Projects Section -->
	{featuredProjects.length > 0 && (
		<section class="py-20 bg-gray-900/50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-3xl md:text-4xl font-bold mb-4 bg-gradient-to-r from-primary-400 to-accent-orange bg-clip-text text-transparent">
						Projetos em Destaque
					</h2>
					<p class="text-gray-400 text-lg max-w-2xl mx-auto">
						Alguns dos meus trabalhos mais recentes e desafiadores
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{featuredProjects.map((project) => (
						<article class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-6 border border-gray-700/50 hover:border-primary-500/50 transition-all duration-300 group hover:transform hover:scale-105">
							{project.image && (
								<div class="mb-4 overflow-hidden rounded-lg">
									<img src={project.image} alt={project.title} class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" loading="lazy" />
								</div>
							)}
							<div class="space-y-4">
								<h3 class="text-xl font-semibold text-white group-hover:text-primary-400 transition-colors duration-200">
									{project.title}
								</h3>
								<p class="text-gray-400 line-clamp-3">
									{project.description}
								</p>
								{project.technologies && project.technologies.length > 0 && (
									<div class="flex flex-wrap gap-2">
										{project.technologies.slice(0, 3).map((tech: string) => (
											<span class="px-3 py-1 bg-gray-700/50 text-gray-300 text-sm rounded-full border border-gray-600/50">
												{tech}
											</span>
										))}
									</div>
								)}
								<div class="flex gap-3 pt-4">
									{project.demoLink && (
										<a href={project.demoLink} class="flex-1 bg-primary-600 hover:bg-primary-500 text-white text-center py-2 px-4 rounded-lg transition-colors duration-200 font-medium" target="_blank" rel="noopener noreferrer">
											Demo
										</a>
									)}
									{project.githubLink && (
										<a href={project.githubLink} class="flex-1 border border-gray-600 hover:border-primary-400 text-gray-300 hover:text-primary-400 text-center py-2 px-4 rounded-lg transition-colors duration-200 font-medium" target="_blank" rel="noopener noreferrer">
											GitHub
										</a>
									)}
								</div>
							</div>
						</article>
					))}
				</div>

				<div class="text-center mt-12">
					<a href="/projetos" class="inline-flex items-center gap-2 bg-gray-800/50 hover:bg-gray-700/50 text-gray-300 hover:text-primary-400 px-6 py-3 rounded-lg transition-all duration-200 border border-gray-700/50 hover:border-primary-500/50">
						Ver Todos os Projetos
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
						</svg>
					</a>
				</div>
			</div>
		</section>
	)}

	<!-- Real-time Technologies Section -->
	<RealtimeTechSection />

	<!-- Formação Acadêmica e Profissional -->
	<section class="py-20 bg-gradient-to-br from-gray-900 via-gray-950 to-gray-900">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-bold mb-4 bg-gradient-to-r from-primary-400 to-accent-orange bg-clip-text text-transparent">
					Formação & Certificações
				</h2>
				<p class="text-gray-400 text-lg max-w-2xl mx-auto">
					Minha jornada educacional e certificações profissionais
				</p>
			</div>
			
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
				<!-- Formação Acadêmica -->
				<div class="bg-gray-800/30 backdrop-blur-sm rounded-xl p-8 border border-gray-700/50 hover:border-primary-500/30 transition-all duration-300">
					<h3 class="text-2xl font-semibold text-white mb-6 flex items-center">
						<svg class="w-6 h-6 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
						</svg>
						Formação Acadêmica
					</h3>
					
					<div class="space-y-8">
						{formacao.map((item, index) => (
							<div class={`relative pl-8 border-l-2 border-primary-500/30 ${index < formacao.length - 1 ? "pb-8" : ""}`}>
								<div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-primary-500"></div>
								<h4 class="text-xl font-medium text-primary-400">{item.titulo}</h4>
								<p class="text-gray-300 font-medium">{item.instituicao}</p>
								<p class="text-gray-400">{item.periodo}</p>
								<p class="mt-2 text-gray-400">{item.descricao}</p>
							</div>
						))}
					</div>
				</div>
				
				<!-- Certificações -->
				<div class="bg-gray-800/30 backdrop-blur-sm rounded-xl p-8 border border-gray-700/50 hover:border-accent-cyan/30 transition-all duration-300">
					<h3 class="text-2xl font-semibold text-white mb-6 flex items-center">
						<svg class="w-6 h-6 mr-2 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
						</svg>
						Certificações & Cursos
					</h3>
					
					<div class="space-y-6">
						{certificacoes.map((cert) => (
							<div class="group p-4 bg-gray-800/50 rounded-lg hover:bg-gray-700/50 transition-all duration-300">
								<h4 class="text-secondary-400 font-medium">{cert.nome}</h4>
								<p class="text-gray-300 text-sm">{cert.emissor} | {cert.ano}</p>
								<p class="mt-2 text-gray-400 text-sm">{cert.descricao}</p>
							</div>
						))}
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-20 bg-gradient-to-r from-primary-900/20 to-accent-blue/20">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h2 class="text-3xl md:text-4xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-accent-orange bg-clip-text text-transparent">
				Vamos Trabalhar Juntos?
			</h2>
			<p class="text-gray-400 text-lg mb-8 max-w-2xl mx-auto">
				Estou sempre interessado em novos projetos e oportunidades.
				Vamos conversar sobre como posso ajudar a transformar suas ideias em realidade.
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a href="/contato" class="bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-500 hover:to-secondary-500 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-xl shadow-primary-500/25">
					Entrar em Contato
				</a>
				<a href="/sobre" class="border-2 border-gray-600 hover:border-primary-400 text-gray-300 hover:text-primary-400 px-8 py-4 rounded-lg font-semibold transition-all duration-300">
					Sobre Mim
				</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	@keyframes bounce-subtle {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@keyframes fade-in {
		0% {
			opacity: 0;
			transform: translateY(20px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-bounce-subtle {
		animation: bounce-subtle 6s ease-in-out infinite;
	}

	.animate-fade-in {
		animation: fade-in 1s ease-out forwards;
	}

	.line-clamp-2 {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.line-clamp-3 {
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
</style>
