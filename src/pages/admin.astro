---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel Administrativo - Ítalo Antonio</title>
    <link rel="stylesheet" href="/admin/style.css">
    <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
</head>
<body>
    <!-- Tela de Login -->
    <div id="login-container" class="container">
        <div class="login-card">
            <h1>Painel Administrativo - Ítalo Antonio</h1>
            <form id="login-form">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Senha:</label>
                    <input type="password" id="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
            <div id="login-error" class="error-message" style="display: none;"></div>
        </div>
    </div>

    <!-- Dashboard de Gerenciamento -->
    <div id="dashboard-container" class="container" style="display: none;">
        <header class="dashboard-header">
            <h1>Dashboard - Ítalo Antonio</h1>
            <button id="logout-btn" class="btn btn-secondary">Sair</button>
        </header>

        <!-- Navegação -->
        <nav class="dashboard-nav">
            <button id="list-posts-btn" class="nav-btn active">Listar Posts</button>
            <button id="new-post-btn" class="nav-btn">Novo Post</button>
            <button id="list-projects-btn" class="nav-btn">Listar Projetos</button>
            <button id="new-project-btn" class="nav-btn">Novo Projeto</button>
            <button id="about-manager-btn" class="nav-btn">Gerenciar Sobre</button>
        </nav>

        <!-- Seções do dashboard -->
        <section id="posts-list-section" class="dashboard-section">
            <h2>Posts Existentes</h2>
            <div id="posts-container" class="posts-grid"></div>
        </section>

        <!-- Seção de Criação/Edição de Posts -->
        <section id="post-editor-section" class="dashboard-section" style="display: none;">
            <h2 id="editor-title">Criar Novo Post</h2>
            <form id="post-form">
                <input type="hidden" id="post-id" value="">
                
                <div class="form-group">
                    <label for="post-title">Título:</label>
                    <input type="text" id="post-title" required>
                </div>

                <div class="form-group">
                    <label for="post-excerpt">Resumo:</label>
                    <textarea id="post-excerpt" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <label for="post-tags">Tags (separadas por vírgula):</label>
                    <input type="text" id="post-tags" placeholder="tech, desenvolvimento, tutorial">
                </div>

                <div class="form-group">
                    <label for="post-status">Status:</label>
                    <select id="post-status">
                        <option value="draft">Rascunho</option>
                        <option value="published">Publicado</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="cover-image">Imagem de Capa:</label>
                    <input type="file" id="cover-image-input" accept="image/*">
                    <input type="text" id="cover-image-url" placeholder="URL da imagem de capa">
                    <div id="cover-image-preview" class="image-preview"></div>
                </div>

                <div class="form-group">
                    <label for="post-content">Conteúdo (Markdown):</label>
                    <textarea id="post-content"></textarea>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Salvar Post</button>
                    <button type="button" id="cancel-edit-btn" class="btn btn-secondary">Cancelar</button>
                </div>
            </form>
        </section>

        <!-- Seção de Listagem de Projetos -->
        <section id="projects-list-section" class="dashboard-section" style="display: none;">
            <h2>Projetos Existentes</h2>
            <div id="projects-container" class="posts-grid">
                <!-- Projetos serão carregados dinamicamente -->
            </div>
        </section>

        <!-- Seção de Criação/Edição de Projetos -->
        <section id="project-editor-section" class="dashboard-section" style="display: none;">
            <h2 id="project-editor-title">Criar Novo Projeto</h2>
            <form id="project-form">
                <input type="hidden" id="project-id" value="">
                
                <div class="form-group">
                    <label for="project-title">Título do Projeto:</label>
                    <input type="text" id="project-title" required>
                </div>

                <div class="form-group">
                    <label for="project-description">Descrição:</label>
                    <textarea id="project-description" rows="4" placeholder="Descreva o projeto..."></textarea>
                </div>

                <div class="form-group">
                    <label for="project-technologies">Tecnologias (separadas por vírgula):</label>
                    <input type="text" id="project-technologies" placeholder="React, Node.js, MongoDB">
                </div>

                <div class="form-group">
                    <label for="project-demo-link">Link da Demo:</label>
                    <input type="url" id="project-demo-link" placeholder="https://exemplo.com">
                </div>

                <div class="form-group">
                    <label for="project-github-link">Link do GitHub:</label>
                    <input type="url" id="project-github-link" placeholder="https://github.com/usuario/repositorio">
                </div>

                <div class="form-group">
                    <label for="project-download-link">Link de Download (opcional):</label>
                    <input type="url" id="project-download-link" placeholder="https://exemplo.com/download">
                </div>

                <div class="form-group">
                    <label for="project-status">Status:</label>
                    <select id="project-status">
                        <option value="draft">Rascunho</option>
                        <option value="published">Publicado</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="project-image">Imagem do Projeto:</label>
                    <input type="file" id="project-image-input" accept="image/*">
                    <input type="text" id="project-image-url" placeholder="URL da imagem do projeto">
                    <div id="project-image-preview" class="image-preview"></div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Salvar Projeto</button>
                    <button type="button" id="cancel-project-edit-btn" class="btn btn-secondary">Cancelar</button>
                </div>
            </form>
        </section>

        <!-- Seção de Gerenciamento da Página Sobre -->
        <section id="about-manager-section" class="dashboard-section" style="display: none;">
            <h2>Gerenciar Página Sobre</h2>
            <form id="about-form" class="post-form">
                
                <!-- Bio -->
                <div class="form-group">
                    <label for="about-bio">Biografia:</label>
                    <textarea id="about-bio" rows="6" placeholder="Conte sua história profissional..."></textarea>
                </div>

                <!-- Foto do Perfil -->
                <div class="form-group">
                    <label for="profile-image">Foto do Perfil:</label>
                    <input type="file" id="profile-image-input" accept="image/*">
                    <input type="text" id="profile-image-url" placeholder="URL da imagem do perfil" style="margin-top: 10px;">
                    <div id="profile-image-preview" class="image-preview"></div>
                </div>

                <!-- Skills -->
                <div class="form-section">
                    <h3>Habilidades</h3>
                    
                    <div class="form-group">
                        <label for="skills-frontend">Frontend:</label>
                        <input type="text" id="skills-frontend" placeholder="HTML5, CSS3, JavaScript, React...">
                        <small>Separe as habilidades por vírgula</small>
                    </div>

                    <div class="form-group">
                        <label for="skills-backend">Backend:</label>
                        <input type="text" id="skills-backend" placeholder="Node.js, Python, PHP...">
                    </div>

                    <div class="form-group">
                        <label for="skills-database">Database:</label>
                        <input type="text" id="skills-database" placeholder="MySQL, MongoDB, PostgreSQL...">
                    </div>

                    <div class="form-group">
                        <label for="skills-tools">Ferramentas:</label>
                        <input type="text" id="skills-tools" placeholder="Git, Docker, AWS...">
                    </div>
                </div>

                <!-- Experiência Profissional -->
                <div class="form-section">
                    <h3>Experiência Profissional</h3>
                    <div id="experience-container">
                        <!-- Experiências serão adicionadas dinamicamente -->
                    </div>
                    <button type="button" id="add-experience-btn" class="btn btn-outline">+ Adicionar Experiência</button>
                </div>

                <!-- Formação -->
                <div class="form-section">
                    <h3>Formação</h3>
                    <div id="education-container">
                        <!-- Formações serão adicionadas dinamicamente -->
                    </div>
                    <button type="button" id="add-education-btn" class="btn btn-outline">+ Adicionar Formação</button>
                </div>

                <!-- Certificações -->
                <div class="form-section">
                    <h3>Certificações</h3>
                    <div id="certifications-container">
                        <!-- Certificações serão adicionadas dinamicamente -->
                    </div>
                    <button type="button" id="add-certification-btn" class="btn btn-outline">+ Adicionar Certificação</button>
                </div>

                <!-- Links Sociais -->
                <div class="form-section">
                    <h3>Links Sociais</h3>
                    
                    <div class="form-group">
                        <label for="social-github">GitHub:</label>
                        <input type="url" id="social-github" placeholder="https://github.com/seu-usuario">
                    </div>

                    <div class="form-group">
                        <label for="social-linkedin">LinkedIn:</label>
                        <input type="url" id="social-linkedin" placeholder="https://linkedin.com/in/seu-perfil">
                    </div>

                    <div class="form-group">
                        <label for="social-twitter">Twitter:</label>
                        <input type="url" id="social-twitter" placeholder="https://twitter.com/seu-usuario">
                    </div>

                    <div class="form-group">
                        <label for="social-email">E-mail:</label>
                        <input type="email" id="social-email" placeholder="seu.email@exemplo.com">
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Salvar Informações</button>
                    <button type="button" id="cancel-about-btn" class="btn btn-secondary">Cancelar</button>
                </div>
            </form>
        </section>
    </div>

    <!-- Loading Spinner -->
    <div id="loading-spinner" class="spinner" style="display: none;">
        <div class="spinner-circle"></div>
    </div>

    <!-- Supabase Client -->
    <script type="module">
        import { createClient } from 'https://esm.sh/@supabase/supabase-js@2';

        // Configurações do Supabase (substitua pelas suas)
        const supabaseUrl = 'https://SEU_PROJECT_REF.supabase.co';
        const supabaseAnonKey = 'SEU_ANON_KEY';

        // Inicializar Supabase
        const supabase = createClient(supabaseUrl, supabaseAnonKey);

        // Disponibilizar globalmente
        window.supabase = supabase;

        console.log('� Supabase inicializado com sucesso');
    </script>

    <!-- EasyMDE -->
    <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>

    <!-- Admin Script -->
    <script src="/admin/admin.js" is:inline></script>
</body>
</html>
