---
import Layout from '../layouts/Layout.astro';
import { PORTFOLIO_CONFIG } from '../lib/portfolio-config.js';
---

<Layout title="Configurações - Portfolio">
  <!-- Header -->
  <section class="pt-32 pb-12 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-accent-cyan bg-clip-text text-transparent">
          Configurações do Portfolio
        </h1>
        <p class="text-xl text-gray-400 mb-8 leading-relaxed">
          Configure a integração com o GitHub e personalize seu portfolio
        </p>
      </div>
    </div>
  </section>

  <!-- Configurações Atuais -->
  <section class="py-16 bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid gap-8">
        
        <!-- GitHub Configuration -->
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700/50">
          <div class="flex items-center mb-6">
            <svg class="w-8 h-8 text-primary-400 mr-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <h2 class="text-2xl font-semibold text-white">Configuração do GitHub</h2>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-lg font-medium text-primary-300 mb-3">Configurações Atuais</h3>
              <div class="space-y-3">
                <div class="flex justify-between items-center p-3 bg-gray-700/30 rounded-lg">
                  <span class="text-gray-300">Username:</span>
                  <code class="text-primary-400">{PORTFOLIO_CONFIG.github.username}</code>
                </div>
                <div class="flex justify-between items-center p-3 bg-gray-700/30 rounded-lg">
                  <span class="text-gray-300">Projetos Destacados:</span>
                  <code class="text-accent-orange">{PORTFOLIO_CONFIG.display.featuredProjectsCount}</code>
                </div>
                <div class="flex justify-between items-center p-3 bg-gray-700/30 rounded-lg">
                  <span class="text-gray-300">Repositórios Excluídos:</span>
                  <code class="text-gray-400">{PORTFOLIO_CONFIG.github.excludeRepos.length}</code>
                </div>
                <div class="flex justify-between items-center p-3 bg-gray-700/30 rounded-lg">
                  <span class="text-gray-300">Máx. Tecnologias:</span>
                  <code class="text-accent-gold">{PORTFOLIO_CONFIG.display.maxTechnologies}</code>
                </div>
              </div>
            </div>

            <div>
              <h3 class="text-lg font-medium text-primary-300 mb-3">Como Personalizar</h3>
              <div class="space-y-3 text-gray-300">
                <div class="p-4 bg-gray-700/20 rounded-lg border-l-4 border-primary-500">
                  <p class="font-medium text-primary-300 mb-2">1. Username do GitHub</p>
                  <p class="text-sm">Edite <code class="text-accent-orange">src/lib/portfolio-config.js</code> e altere <code>github.username</code></p>
                </div>
                <div class="p-4 bg-gray-700/20 rounded-lg border-l-4 border-accent-orange">
                  <p class="font-medium text-accent-orange mb-2">2. Repositórios Excluídos</p>
                  <p class="text-sm">Adicione nomes em <code class="text-accent-orange">github.excludeRepos</code></p>
                </div>
                <div class="p-4 bg-gray-700/20 rounded-lg border-l-4 border-accent-gold">
                  <p class="font-medium text-accent-gold mb-2">3. Categorias</p>
                  <p class="text-sm">Personalize regras em <code class="text-accent-gold">categoryRules</code></p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- System Status -->
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700/50">
          <div class="flex items-center mb-6">
            <svg class="w-8 h-8 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h2 class="text-2xl font-semibold text-white">Status do Sistema</h2>
          </div>

          <div class="grid md:grid-cols-3 gap-6">
            <div class="text-center p-6 bg-green-500/10 rounded-lg border border-green-500/20">
              <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-green-400 mb-2">GitHub API</h3>
              <p class="text-green-300">Conectado</p>
            </div>

            <div class="text-center p-6 bg-blue-500/10 rounded-lg border border-blue-500/20">
              <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-blue-400 mb-2">Supabase</h3>
              <p class="text-blue-300">Backup</p>
            </div>

            <div class="text-center p-6 bg-purple-500/10 rounded-lg border border-purple-500/20">
              <div class="w-12 h-12 bg-purple-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-purple-400 mb-2">Mock Data</h3>
              <p class="text-purple-300">Fallback</p>
            </div>
          </div>
        </div>

        <!-- Instruções de Configuração -->
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700/50">
          <div class="flex items-center mb-6">
            <svg class="w-8 h-8 text-accent-gold mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h2 class="text-2xl font-semibold text-white">Guia de Configuração</h2>
          </div>

          <div class="prose prose-invert max-w-none">
            <div class="grid md:grid-cols-2 gap-8">
              <div>
                <h3 class="text-xl font-semibold text-primary-300 mb-4">Configuração Básica</h3>
                <div class="space-y-4">
                  <div class="p-4 bg-gray-700/30 rounded-lg">
                    <h4 class="font-medium text-white mb-2">1. Username do GitHub</h4>
                    <p class="text-gray-300 text-sm mb-2">Abra <code class="text-accent-orange">src/lib/portfolio-config.js</code></p>
                    <pre class="bg-gray-900 p-3 rounded text-xs text-green-400 overflow-x-auto">
github: {`{`}
  username: 'SeuUsername' // ⚠️ ALTERE AQUI
{`}`}
                    </pre>
                  </div>

                  <div class="p-4 bg-gray-700/30 rounded-lg">
                    <h4 class="font-medium text-white mb-2">2. Repositórios a Ignorar</h4>
                    <p class="text-gray-300 text-sm mb-2">Exclua repos que não devem aparecer:</p>
                    <pre class="bg-gray-900 p-3 rounded text-xs text-green-400 overflow-x-auto">
excludeRepos: [
  'dotfiles',
  'private-notes'
]
                    </pre>
                  </div>
                </div>
              </div>

              <div>
                <h3 class="text-xl font-semibold text-primary-300 mb-4">Configuração Avançada</h3>
                <div class="space-y-4">
                  <div class="p-4 bg-gray-700/30 rounded-lg">
                    <h4 class="font-medium text-white mb-2">3. Palavras-chave para Destaque</h4>
                    <p class="text-gray-300 text-sm mb-2">Repos com estas palavras ficam em destaque:</p>
                    <pre class="bg-gray-900 p-3 rounded text-xs text-green-400 overflow-x-auto">
featuredKeywords: [
  'portfolio', 'website',
  'app', 'platform'
]
                    </pre>
                  </div>

                  <div class="p-4 bg-gray-700/30 rounded-lg">
                    <h4 class="font-medium text-white mb-2">4. Mapeamento de Tecnologias</h4>
                    <p class="text-gray-300 text-sm mb-2">Personalize como tecnologias aparecem:</p>
                    <pre class="bg-gray-900 p-3 rounded text-xs text-green-400 overflow-x-auto">
techMapping: &#123;
  'react': 'React.js',
  'nodejs': 'Node.js'
&#125;
                    </pre>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Links Úteis -->
  <section class="py-16 bg-gray-950">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-8 bg-gradient-to-r from-primary-400 to-accent-cyan bg-clip-text text-transparent">
        Links Úteis
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        <a 
          href="https://github.com/ThiagoBDias" 
          target="_blank" 
          class="p-6 bg-gray-800/50 rounded-xl border border-gray-700/50 hover:border-primary-500/50 transition-all duration-300 group"
        >
          <svg class="w-12 h-12 text-primary-400 mx-auto mb-4 group-hover:scale-110 transition-transform duration-200" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">Perfil GitHub</h3>
          <p class="text-gray-400">Veja todos os repositórios</p>
        </a>

        <a 
          href="/projetos" 
          class="p-6 bg-gray-800/50 rounded-xl border border-gray-700/50 hover:border-accent-orange/50 transition-all duration-300 group"
        >
          <svg class="w-12 h-12 text-accent-orange mx-auto mb-4 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">Projetos</h3>
          <p class="text-gray-400">Ver projetos integrados</p>
        </a>

        <a 
          href="https://docs.astro.build" 
          target="_blank"
          class="p-6 bg-gray-800/50 rounded-xl border border-gray-700/50 hover:border-accent-gold/50 transition-all duration-300 group"
        >
          <svg class="w-12 h-12 text-accent-gold mx-auto mb-4 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">Documentação</h3>
          <p class="text-gray-400">Aprenda mais sobre Astro</p>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  code {
    @apply bg-gray-700 px-2 py-1 rounded text-sm;
  }
</style>